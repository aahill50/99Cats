
<form action=<%= cat_rental_requests_url %> method="post">
  <input name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">

  <p>
    <label for="cat_name">Cat Name</label>
    <select name="cat_rental_request[cat_id]" id="cat_name">
      <option value=<%= ""%>>Choose a cat</option>
      <%Cat.all.each do |cat|%>
      <option value=<%= cat.id %>><%= cat.name %> </option>
      <% end %>

    </select>
  </p>

  <p>
    <label for="start_date">Start Date</label>
    <input name="cat_rental_request[start_date]" id="start_date" type="date">
  </p>
  <p>
    <label for="end_date">End Date</label>
    <input name="cat_rental_request[end_date]" id="end_date" type="date">
  </p>

  <p>
    <input name="submit" type="submit">
  </p>


</form>